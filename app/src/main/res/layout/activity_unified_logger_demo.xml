<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".UnifiedLoggerDemo">

    <TextView android:text="@string/hello_world"
        android:id="@+id/hello"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="firstButton"
        android:layout_below="@id/hello"
        android:id="@+id/first_button"
        android:onClick="firstButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_button"
        android:text="secondButton"
        android:id="@+id/second_button"
        android:onClick="secondButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_button"
        android:text="thirdButton"
        android:id="@+id/third_button"
        android:onClick="thirdButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="crash!"
        android:layout_below="@id/third_button"
        android:onClick="crash"/>

</RelativeLayout>
